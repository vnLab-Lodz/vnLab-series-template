{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "jsx": "preserve",
    "lib": ["DOM", "ES2015", "ES2017", "ES2020", "ES2021"],
    "strict": true,
    "noEmit": true,
    "allowJs": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "resolveJsonModule": true
  },
  "include": ["./src/**/*", "./config/**/*"]
}
