{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "jsx": "preserve",
    "lib": ["DOM", "ES2015", "ES2017", "ES2020", "ES2021"],
    "strict": true,
    "noEmit": true,
    "allowJs": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "~components/*": ["src/components/*"],
      "~types/*": ["src/types/*"],
      "~types": ["src/types/index.ts"],
      "~styles/*": ["src/styles/*"],
      "~util/*": ["src/util/*"],
      "~util": ["src/util/index.ts"]
    }
  },
  "include": [
    "./src/**/*",
    "./config/**/*",
    "./src/types/declarations.d.ts",
    "./src/types/reveal.js.d.ts"
  ]
}
